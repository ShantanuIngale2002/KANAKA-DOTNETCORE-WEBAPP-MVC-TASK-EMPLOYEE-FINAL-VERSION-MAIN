@model IEnumerable<EmployeeLeaveHistoryModel>

@{
    ViewData["Title"] = "Employee Leave History";
}

<h2 class="my-4">Employee Leave History</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Reason</th>
                <th scope="col">Type</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var leave in Model)
                {
                    <tr>
                        <td>@leave.StartDate</td>
                        <td>@leave.EndDate</td>
                        <td>@leave.Reason</td>
                        <td>@leave.Type</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No leave history available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Employee" asp-action="EmployeeLeave" class="btn btn-info btn-block">Go To Leave</a>
</div>
