<div class="mt-3 align-content-center">
    <div class="text-center">
        <h4 class="ms-2">Employee Leave System</h4>
    </div>
    <hr />
    <dl class="row justify-content-center">
        <div class="row col-12 d-flex justify-content-center">
            <dt class="col-sm-4 text-sm-right">
                Paid Leaves Taken
            </dt>
            <dd class="col-sm-4 test-sm-start">
                @Html.DisplayFor(model => model.EmployeePaidLeavesTaken)
            </dd>
        </div>
        <div class="row col-12 d-flex justify-content-center">
            <dt class="col-sm-4 text-sm-right">
                Paid Leaves Remaining
            </dt>
            <dd class="col-sm-4 test-sm-start">
                @Html.DisplayFor(model => model.EmployeePaidLeavesRemain)
            </dd>
        </div><div class="row col-12 d-flex justify-content-center">
            <dt class="col-sm-4 text-sm-right">
                Loss of Pay Leaves Taken
            </dt>
            <dd class="col-sm-4 test-sm-start">
                @Html.DisplayFor(model => model.EmployeePaylossLeavesTaken)
            </dd>
        </div>
        <div class="row col-12 d-flex justify-content-center mt-5">
            <div class="col-sm-4 text-sm-right">
                <a asp-controller="Employee" asp-action="LeavesHistory" class="btn btn-primary btn-block">Leave History</a>
            </div>
            <div class="col-sm-4 text-sm-start">
                <a asp-controller="Home" asp-action="EmployeeOrAdmin" class="btn btn-secondary btn-block">Dashboard</a>
            </div>
        </div><div class="row col-12 d-flex justify-content-center mt-5">
